<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header text-center">Login</div>
            <div class="card-body">
                <img src="/img/logo.png" class="rounded-circle mx-auto d-block m-4 logo" alt="logo">
                <form action="/users/singin" method="POST">
                    <div class="form-group">
                        <label >Email:</label>
                        <input type="email" name="email" class="form-control" placeholder="Introduzca su email" autofocus>
                    </div>
                    <div class="form-group">
                        <label>Contraseña:</label>
                        <input type="password" name="password" class="form-control" placeholder="Introduzca su contraseña" autofocus>
                    </div>
                    <div class="form-group mt-3 d-grid gap-2">
                        <button type="submit" autofocus class="btn btn-block btn-primary">Ingresar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>