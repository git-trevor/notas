{{#each errores}}
<div class="alert alert-warning alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
    <div class="card border-success">
        <div class="card-header bg-warning">
            <h3>Editar Nota {{_id}}</h3>
        </div>
        <div class="card-body">
            <form action="/notes/editar-nota/{{_id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT"> 
                <div class="form-group mb-3">
                    <input type="text" name="titulo" class="form-control" placeholder="Título" autofocus value="{{titulo}}">
                </div>
                <div class="form-group mb-3">
                    <textarea name="descripcion" class="form-control" placeholder="Descripción">{{descripcion}}</textarea>
                </div>
                <div class="form-group d-grid gap-2">
                    <button class="btn btn-outline-success" type="submit">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>